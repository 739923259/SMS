<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/app_bottom_shadow" />

    <LinearLayout
        android:id="@+id/app_bottombar_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_white"
        android:clickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/app_bottombar_ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_bottombar_iv1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/point_select" />

            <TextView

                android:id="@+id/app_bottombar_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_point"
                android:textColor="#03A9F4"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_bottombar_ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_bottombar_iv2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/app_find_unselect" />

            <TextView
                android:id="@+id/app_bottombar_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_find_title"
                android:textColor="@color/common_gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_bottombar_ll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app_bottombar_iv3"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/app_customer_manager_unselect" />

            <TextView
                android:id="@+id/app_bottombar_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_customer_manager_title"
                android:textColor="@color/common_gray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/app_bottombar_ll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app_bottombar_iv4"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/app_red_package_unselect" />

            <TextView
                android:id="@+id/app_bottombar_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/app_red_packet_title"
                android:textColor="@color/common_gray"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>